flotar acuadrado (flotar x) {
	área de flotación;
	área = pow (x, 2);
	área de retorno;
}

float atriangulo (float x, float y) {
	área de flotación;
	área = (x * y) / 2;
	área de retorno;
}

float arectangulo (float x, float y) {
	área de flotación;
	área = x * y;
	área de retorno;
}

flotar acirculo (flotar x) {
	área de flotación;
	área = (3,14159 * pow (x, 2)) / 4;
	área de retorno;
}

flotar pcuadrado (flotar x) {
	flotador perimetro;
	perimetro = 4 * x;
	retorno perimetro;
}

float ptriangulo (float x, float y, float z) {
	flotador perimetro;
	perimetro = x + y + z;
	retorno perimetro;
}

float prectangulo (float x, float y) {
	flotador perimetro;
	perimetro = (2 * x) + (2 * y);
	retorno perimetro;
}

pcirculo flotante (flotar x) {
	flotador perimetro;
	perimetro = 3,14159 * x;
	retorno perimetro;
}

float encontrarMen (float x, float y) {
	float numMen;
	si (x <y) {
		numMen = x;
	}
	demás{
		numMen = y;
	}

	return numMen;
}
